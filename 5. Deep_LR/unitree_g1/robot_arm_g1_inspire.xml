<mujoco model="g1_left_arm_inhand_fixed">
  <compiler angle="radian" meshdir="../meshes/unitree_meshes/" />

  <default>
    <default class="arm_motor">
      <joint damping="0.05" armature="0.01" frictionloss="0.2"/>
    </default>
    <default class="wrist_motor">
      <joint damping="0.05" armature="0.01" frictionloss="0.1"/>
    </default>
    <default class="visual">
      <geom contype="0" conaffinity="0" group="2" />
    </default>
    <default class="collision">
      <geom condim="3" contype="1" conaffinity="1" group="1" solref="0.005 1" friction="1 0.01 0.01" />
    </default>
  </default>

  <asset>
    <mesh name="left_shoulder_pitch_link" file="left_shoulder_pitch_link.STL" />
    <mesh name="left_shoulder_roll_link" file="left_shoulder_roll_link.STL" />
    <mesh name="left_shoulder_yaw_link" file="left_shoulder_yaw_link.STL" />
    <mesh name="left_elbow_link" file="left_elbow_link.STL" />
    <mesh name="left_wrist_roll_link" file="left_wrist_roll_link.STL" />
    <mesh name="left_wrist_pitch_link" file="left_wrist_pitch_link.STL" />
    <mesh name="left_wrist_yaw_link" file="left_wrist_yaw_link.STL" />
    <mesh name="torso_link" file="torso_link.STL" />

    <mesh name="inhand_base_link" file="Inspire_RH56DFTP/base_link.STL" />

    <mesh name="inhand_left_thumb_1" file="Inspire_RH56DFTP/left_thumb_1.STL" />
    <mesh name="inhand_left_thumb_2" file="Inspire_RH56DFTP/left_thumb_2.STL" />
    <mesh name="inhand_left_thumb_3" file="Inspire_RH56DFTP/left_thumb_3.STL" />
    <mesh name="inhand_left_thumb_4" file="Inspire_RH56DFTP/left_thumb_4.STL" />

    <mesh name="inhand_left_index_1" file="Inspire_RH56DFTP/left_index_1.STL" />
    <mesh name="inhand_left_index_2" file="Inspire_RH56DFTP/left_index_2.STL" />

    <mesh name="inhand_left_middle_1" file="Inspire_RH56DFTP/left_middle_1.STL" />
    <mesh name="inhand_left_middle_2" file="Inspire_RH56DFTP/left_middle_2.STL" />

    <mesh name="inhand_left_ring_1" file="Inspire_RH56DFTP/left_ring_1.STL" />
    <mesh name="inhand_left_ring_2" file="Inspire_RH56DFTP/left_ring_2.STL" />

    <mesh name="inhand_left_little_1" file="Inspire_RH56DFTP/left_little_1.STL" />
    <mesh name="inhand_left_little_2" file="Inspire_RH56DFTP/left_little_2.STL" />
    <texture name="plane" type="2d" builtin="checker" rgb1=".1 .1 .1" rgb2=".9 .9 .9"
        width="64" height="64" mark="cross" markrgb=".8 .8 .8" />
    <material name="plane" reflectance="0.3" texture="plane" texrepeat="4 4" texuniform="true"/>
  </asset>

  <worldbody>
    <geom name="floor" pos="0 0 0" size="0 0 .25" type="plane" material="plane"
            condim="3" />
    <light directional="true" ambient=".3 .3 .3" pos="30 30 30" dir="0 -.5 -1"
        diffuse=".5 .5 .5" specular=".5 .5 .5" />

    <body name="base_link" pos="0 0 0.65">
      <geom name="base_geom" type="box" size="0.1 0.1 0.65" rgba="0.5 0.5 0.5 1" class="visual" />
      <geom name="base_coll" type="box" size="0.1 0.1 0.65" class="collision" />

      <body name="left_shoulder_pitch_link" pos="0.05 0.10022 0.35">
        <inertial pos="0 0.035892 -0.011628" quat="0.654152 0.0130458 -0.326267 0.68225"
          mass="0.718" diaginertia="0.000465864 0.000432842 0.000406394" />
        <joint name="left_shoulder_pitch_joint" pos="0 0 0" axis="0 1 0"
          range="-3.0892 2.6704" actuatorfrcrange="-25 25" class="arm_motor" />
        <geom type="mesh" mesh="left_shoulder_pitch_link" class="visual" />

        <body name="left_shoulder_roll_link" pos="0 0.038 -0.013831" quat="0.990268 -0.139172 0 0">
          <inertial pos="-0.000227 0.00727 -0.063243" quat="0.701256 -0.0196223 -0.00710317 0.712604" mass="0.643" diaginertia="0.000691311 0.000618011 0.000388977" />
          <joint name="left_shoulder_roll_joint" pos="0 0 0" axis="1 0 0" range="-1.5882 2.2515" actuatorfrcrange="-25 25" class="arm_motor" />
          <geom type="mesh" mesh="left_shoulder_roll_link" class="visual" />

          <body name="left_shoulder_yaw_link" pos="0 0.00624 -0.1032">
            <inertial pos="0.010773 -0.002949 -0.072009" quat="0.716879 -0.0964829 -0.0679942 0.687134" mass="0.734" diaginertia="0.00106187 0.00103217 0.000400661" />
            <joint name="left_shoulder_yaw_joint" pos="0 0 0" axis="0 0 1" range="-2.618 2.618" actuatorfrcrange="-25 25" class="arm_motor" />
            <geom type="mesh" mesh="left_shoulder_yaw_link" class="visual" />

            <body name="left_elbow_link" pos="0.015783 0 -0.080518">
              <inertial pos="0.064956 0.004454 -0.010062" quat="0.541765 0.636132 0.388821 0.388129" mass="0.6" diaginertia="0.000443035 0.000421612 0.000259353" />
              <joint name="left_elbow_joint" pos="0 0 0" axis="0 1 0" range="-1.0472 2.0944" actuatorfrcrange="-25 25" class="arm_motor" />
              <geom type="mesh" mesh="left_elbow_link" class="visual" />

              <body name="left_wrist_roll_link" pos="0.1 0.00188791 -0.01">
                <inertial pos="0.0171394 0.000537591 4.8864e-07" quat="0.575338 0.411667 -0.574906 0.411094" mass="0.085445" diaginertia="5.48211e-05 4.96646e-05 3.57798e-05" />
                <joint name="left_wrist_roll_joint" pos="0 0 0" axis="1 0 0" range="-1.97222 1.97222" actuatorfrcrange="-25 25" class="arm_motor" />
                <geom type="mesh" mesh="left_wrist_roll_link" class="visual" />

                <body name="left_wrist_pitch_link" pos="0.038 0 0">
                  <inertial pos="0.0229999 -0.00111685 -0.00111658" quat="0.249998 0.661363 0.293036 0.643608" mass="0.48405" diaginertia="0.000430353 0.000429873 0.000164648" />
                  <joint name="left_wrist_pitch_joint" pos="0 0 0" axis="0 1 0" range="-1.61443 1.61443" actuatorfrcrange="-5 5" class="wrist_motor" />
                  <geom type="mesh" mesh="left_wrist_pitch_link" class="visual" />

                  <body name="left_wrist_yaw_link" pos="0.046 0 0">
                    <inertial pos="0.0708244 0.000191745 0.00161742" quat="0.510571 0.526295 0.468078 0.493188" mass="0.254576" diaginertia="0.000646113 0.000559993 0.000147566" />
                    <joint name="left_wrist_yaw_joint" pos="0 0 0" axis="0 0 1" range="-1.61443 1.61443" actuatorfrcrange="-5 5" class="wrist_motor" />
                    <geom type="mesh" mesh="left_wrist_yaw_link" class="visual" />

                    <!-- ================= HAND MOUNT ================= -->
                    <body name="inhand_mount"
                          pos="0.04 0.002 0"
                          euler="0 1.57 3.1415926">

                      <!-- ================= PALM (TF base_link 对应的“手掌frame”) ================= -->
                      <body name="inhand_base_link">
                        <inertial pos="-0.00013 -0.00373 0.08269"
                                  quat="1 0 0 0"
                                  mass="0.62266"
                                  diaginertia="0.00022 0.00026 0.00013"/>

                        <geom type="mesh" mesh="inhand_base_link" class="visual"/>
                        <geom type="mesh" mesh="inhand_base_link" class="collision"/>

                        <site name="ee_site"
                              pos="0 0.02 0.12"
                              size="0.006"
                              type="sphere"
                              rgba="1 0 0 1"/>


                        <body name="left_thumb_1"
                              pos="0.027 0.021 0.069"
                              quat="1 0 0 0">
                          <geom type="mesh" mesh="inhand_left_thumb_1" class="visual"/>
                          <geom type="mesh" mesh="inhand_left_thumb_1" class="collision"/>


                          <body name="left_thumb_2"
                                pos="0.007 0.011 0.005"
                                quat="-0.092 -0.092 0.701 0.701">
                            <geom type="mesh" mesh="inhand_left_thumb_2" class="visual"/>
                            <geom type="mesh" mesh="inhand_left_thumb_2" class="collision"/>

                            <!-- TF: left_thumb_2 -> left_thumb_3
                                 T=[-0.031,0.021,-0.001], Q=identity -->
                            <body name="left_thumb_3" pos="-0.031 0.021 -0.001">
                              <geom type="mesh" mesh="inhand_left_thumb_3" class="visual"/>
                              <geom type="mesh" mesh="inhand_left_thumb_3" class="collision"/>

                              <!-- TF: left_thumb_3 -> left_thumb_4
                                   T=[-0.022,0.013,0], Q=identity -->
                              <body name="left_thumb_4" pos="-0.022 0.013 0">
                                <geom type="mesh" mesh="inhand_left_thumb_4" class="visual"/>
                                <geom type="mesh" mesh="inhand_left_thumb_4" class="collision"/>
                              </body>
                            </body>
                          </body>
                        </body>

                        <body name="left_index_1"
                              pos="0.039 0.001 0.156"
                              quat="0.509 0.491 -0.491 -0.509">
                          <geom type="mesh" mesh="inhand_left_index_1" class="visual"/>
                          <geom type="mesh" mesh="inhand_left_index_1" class="collision"/>

                          <!-- TF: left_index_1 -> left_index_2
                               T=[-0.003,0.033,0.001], Q=identity -->
                          <body name="left_index_2" pos="-0.003 0.033 0.001">
                            <geom type="mesh" mesh="inhand_left_index_2" class="visual"/>
                            <geom type="mesh" mesh="inhand_left_index_2" class="collision"/>
                          </body>
                        </body>


                        <body name="left_middle_1"
                              pos="0.017 0.001 0.157"
                              quat="-0.500 -0.500 0.500 0.500">
                          <geom type="mesh" mesh="inhand_left_middle_1" class="visual"/>
                          <geom type="mesh" mesh="inhand_left_middle_1" class="collision"/>

                          <!-- TF: left_middle_1 -> left_middle_2
                               T=[-0.003,0.033,0.001], Q=identity -->
                          <body name="left_middle_2" pos="-0.003 0.033 0.001">
                            <geom type="mesh" mesh="inhand_left_middle_2" class="visual"/>
                            <geom type="mesh" mesh="inhand_left_middle_2" class="collision"/>
                          </body>
                        </body>


                        <body name="left_ring_1"
                              pos="-0.005 0.001 0.157"
                              quat="-0.487 -0.513 0.513 0.487">
                          <geom type="mesh" mesh="inhand_left_ring_1" class="visual"/>
                          <geom type="mesh" mesh="inhand_left_ring_1" class="collision"/>

                          <!-- TF: left_ring_1 -> left_ring_2
                               T=[-0.003,0.033,0.001], Q=identity -->
                          <body name="left_ring_2" pos="-0.003 0.033 0.001">
                            <geom type="mesh" mesh="inhand_left_ring_2" class="visual"/>
                            <geom type="mesh" mesh="inhand_left_ring_2" class="collision"/>
                          </body>
                        </body>


                        <body name="left_little_1"
                              pos="-0.026 0.001 0.154"
                              quat="-0.473 -0.525 0.525 0.473">
                          <geom type="mesh" mesh="inhand_left_little_1" class="visual"/>
                          <geom type="mesh" mesh="inhand_left_little_1" class="collision"/>

                          <!-- TF: left_little_1 -> left_little_2
                               T=[-0.003,0.033,0.001], Q=identity -->
                          <body name="left_little_2" pos="-0.003 0.033 0.001">
                            <geom type="mesh" mesh="inhand_left_little_2" class="visual"/>
                            <geom type="mesh" mesh="inhand_left_little_2" class="collision"/>
                          </body>
                        </body>

                      </body> 
                    </body> 

                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="left_shoulder_pitch" joint="left_shoulder_pitch_joint" ctrlrange="-25 25" />
    <motor name="left_shoulder_roll" joint="left_shoulder_roll_joint" ctrlrange="-25 25" />
    <motor name="left_shoulder_yaw" joint="left_shoulder_yaw_joint" ctrlrange="-25 25" />
    <motor name="left_elbow" joint="left_elbow_joint" ctrlrange="-25 25" />
    <motor name="left_wrist_roll" joint="left_wrist_roll_joint" ctrlrange="-25 25" />
    <motor name="left_wrist_pitch" joint="left_wrist_pitch_joint" ctrlrange="-5 5" />
    <motor name="left_wrist_yaw" joint="left_wrist_yaw_joint" ctrlrange="-5 5" />
  </actuator>

  <contact>
    <exclude body1="left_shoulder_pitch_link" body2="left_shoulder_roll_link" />
    <exclude body1="left_shoulder_roll_link" body2="left_shoulder_yaw_link" />
    <exclude body1="left_shoulder_yaw_link" body2="left_elbow_link" />
    <exclude body1="left_elbow_link" body2="left_wrist_roll_link" />
    <exclude body1="left_wrist_roll_link" body2="left_wrist_pitch_link" />
    <exclude body1="left_wrist_pitch_link" body2="left_wrist_yaw_link" />
  </contact>
</mujoco>
